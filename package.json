{
    "name": "freepbx-manager-bot",
    "version": "1.0.0",
    "private": true,
    "license": "",
    "type": "module",
    "main": "build/main.js",
    "scripts": {
        "build": "tsc",
        "build:changelog": "npx @discordx/changelog --src src",
        "dev": "ts-node-esm src/main.ts",
        "start": "node build/main.js",
        "watch": "nodemon --exec ts-node-esm src/main.ts",
        "format": "prettier --write --plugin-search-dir=. .",
        "db:migration:generate": "drizzle-kit generate:sqlite",
        "db:migration:run": "ts-node-esm src/lib/db/migrate.ts"
    },
    "dependencies": {
        "@discordx/importer": "^1.3.0",
        "better-sqlite3": "^9.2.2",
        "discord.js": "^14.14.1",
        "discordx": "^11.9.0",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.29.1",
        "node-cron": "^3.0.3",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.8",
        "@types/node": "^20.10.4",
        "@types/node-cron": "^3.0.11",
        "drizzle-kit": "^0.20.6",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "ts-node": "^10.9.2",
        "typescript": "5.2.2"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=7.0.0"
    }
}
